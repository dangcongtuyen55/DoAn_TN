  <body
    width="100%"
    style="margin: 0; padding: 0 !important; mso-line-height-rule: exactly; background-color: #f1f1f1;"
  >
    <center style="width: 100%; background-color: #f1f2f2;padding:24px;">
      <div
        style="display: none; font-size: 1px;max-height: 0px; max-width: 0px; opacity: 0; overflow: hidden; mso-hide: all; font-family: sans-serif;"
      >
        &zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;&zwnj;&nbsp;
      </div>
      <div style="max-width: 510px; margin: 0 auto;" class="email-container">
        <table
          color="white"
          align="center"
          role="presentation"
          cellspacing="0"
          cellpadding="0"
          border="0"
          width="100%"
          style="background-color: white;border-radius: 12px;"
        >
          <tr>
            <td
              valign="top"
              class="primary"
              style="padding: 10px 16px; border-radius: 12px;"
            >
              <table
                role="presentation"
                border="0"
                cellpadding="0"
                cellspacing="0"
                width="100%"
              >
                <tr style="display: flow-root;">
                  <td class="logo" style="text-align: left;">
                    <img
                      src="https://sv.dntu.edu.vn/images/dntu-logo.png"
                      alt=""
                      style="width:53px;"
                    />
                  </td>
                  <td
                    class="text"
                    style="text-align: left; font-size: 28px; font-weight: bold; color: white;padding-left:8px"
                  >
                    <h3 style="color:white">Hôm nay trời đẹp quá</h3>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr>
            <td valign="middle" class="hero bg_white" style="padding: 16px;">
              <table
                role="presentation"
                border="0"
                cellpadding="0"
                cellspacing="0"
                width="100%"
              >
                <tr>
                  <td style="padding: 16px 24px; text-align: center;">
                    <div class="text">
